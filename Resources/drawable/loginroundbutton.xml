<selector xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="false">
    <layer-list>
      <item android:bottom="0dp" android:left="0dp">
        <shape android:angle="270" android:endColor="@color/riderAccent" android:startColor="@color/riderAccent">
          <stroke android:width="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
          <corners android:radius="5dp" />
          <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
        </shape>
      </item>
    </layer-list>
  </item>


  <item android:state_pressed="false">
    <layer-list>
      <item android:bottom="0dp" android:left="0dp">
        <shape android:angle="270" android:endColor="@color/riderAccentClick" android:startColor="@color/riderAccentClick">
          <stroke android:width="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
          <corners android:radius="5dp" />
          <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp"/>
        </shape>
      </item>
    </layer-list>
  </item>
  
  
</selector>